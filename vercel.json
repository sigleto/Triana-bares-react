{
  "version": 2,
  "builds": [
    { "src": "paginaReact/package.json", "use": "@vercel/static-build" },
    { "src": "paginaReact/**", "use": "@vercel/static" },
    { "src": "backend/src/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "backend/src/index.js" },
    { "src": "/(.*)", "dest": "paginaReact/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "scripts": {
    "build": "npm run dev",
    "dev": "vercel dev"
  },
  "frameworks": {
    "frontend": {
      "use": "@vercel/static-build",
      "config": {
        "distPath": "paginaReact/dist"
      }
    }
  }
}
